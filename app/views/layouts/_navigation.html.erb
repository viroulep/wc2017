<%# navigation styled for Bootstrap 3.0 %>
<nav class="navbar navbar-default navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <% brand_url = current_user&.has_avatar? ? current_user.avatar : 'wc2017.png' %>
      <%= link_to image_tag(brand_url, class: "avatar-thumbnail"), root_path, class: 'navbar-brand' %>
      <% if current_user %>
        <p class="navbar-text"><%= current_user.name %></p>
      <% end %>
    </div>
    <div class="collapse navbar-collapse text-center">
      <div class="title-app navbar-text hidden-sm">French Championship 2018</div>
      <% if current_user %>
        <ul class="nav navbar-nav">
          <% if current_user&.can_manage_competition?(managed_competition) %>
            <%= render 'layouts/navigation_admin' %>
          <% end %>
          <% if current_user&.staff? || current_user&.can_manage_competition?(managed_competition) %>
            <%= render 'layouts/navigation_staff' %>
          <% end %>
          <li class="dropdown">
            <a href="" class="dropdown-toggle top-nav" data-toggle="dropdown" data-hover="dropdown">
              <%= icon('info-circle') %> Information <span class="caret"></span>
            </a>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to icon('calendar', 'Competition\'s schedule'), schedule_path %></li>
              <li><%= link_to icon('user-circle-o', 'My registration'), root_path %></li>
              <li><%= link_to icon('calendar-check-o', 'My personal schedule'), my_schedule_path %></li>
            </ul>
          </li>
        </ul>
      <% end %>
      <ul class="nav navbar-nav navbar-right">
        <% if current_user %>
          <li>
            <%= link_to icon('sign-out', 'Sign out'), signout_path %>
          </li>
        <% else %>
          <li>
            <div class="signin-elem">
              <%= link_to 'Sign in with WCA', signin_path, class: "btn btn-block btn-Worldcubeassociation" %>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
