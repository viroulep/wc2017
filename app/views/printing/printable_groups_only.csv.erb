<% require 'csv' %>
<% headers = ["Event", "Round", "Group", "Color", "Day", "Start", "End"] %>
<%# BEURK %>
<% date_to_int = { "31" => "1", "1" => "2", "2" => "3" } %>
<%= CSV.generate_line(headers).html_safe -%>
<% @groups.each do |group| -%>
<%= CSV.generate_line([
      group.event_id,
      group.round.r_id,
      group.name,
      group.hex_color,
      date_to_int[group.start.strftime("%-d")],
      group.start.strftime("%H:%M"),
      group.end.strftime("%H:%M"),
    ]).html_safe -%>
<% end %>
