<style>
.no_break_inside, h1, h2, li, p, tr, .calendar-cell {
  page-break-inside: avoid !important;
}

.people-list {
  page-break-after: always !important;
}

.name {
}
.navbar {
  display: none;
}
p {
  margin: 0px;
}

.row {
  width: 29.6cm;
  border: 1px;
}

.col-people {
  float: left;
  width: 7.4cm;
  padding-left: 15px;
}
</style>
<% @registrations.each do |e, people| %>
  <h3><%= e.name %></h3>
  <div class="row people-list">
    <%= render "split_people_list", people: people %>
  </div>
<% end %>
