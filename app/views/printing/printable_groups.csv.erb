<% require 'csv' %>
<% headers = ["Event", "Round", "Group", "Color", "Day", "Start", "End", "Role", "Name"] %>
<%# BEURK %>
<% date_to_int = { "31" => "1", "1" => "2", "2" => "3" } %>
<%= CSV.generate_line(headers).html_safe -%>
<% @groups.each do |group| -%>
  <% group.registrations.each do |competitor| %>
<%= CSV.generate_line([
      group.event_id,
      group.round.r_id,
      group.name,
      group.hex_color,
      date_to_int[group.start.strftime("%-d")],
      group.start.strftime("%H:%M"),
      group.end.strftime("%H:%M"),
      "Competitor",
      competitor.name,
    ]).html_safe -%>
  <% end %>
  <% group.staff_registrations.each do |registration| %>
    <% role = if registration.scrambles_for?(group.event_id)
      "Scrambler"
    elsif registration.runner_only?
      "Runner"
    else
      "Juge/Runner"
    end %>
<%= CSV.generate_line([
      group.event_id,
      group.round.r_id,
      group.name,
      group.hex_color,
      date_to_int[group.start.strftime("%-d")],
      group.start.strftime("%H:%M"),
      group.end.strftime("%H:%M"),
      role,
      registration.name,
    ]).html_safe -%>
  <% end %>
  <% group.staff_teams.each do |team| %>
    <% team.registrations.each do |registration| %>
      <% role = if registration.scrambles_for?(group.event_id)
        "Scrambler"
      elsif registration.runner_only?
        "Runner"
      else
        "Juge/Runner"
      end %>
<%= CSV.generate_line([
        group.event_id,
        group.round.r_id,
        group.name,
        group.hex_color,
        date_to_int[group.start.strftime("%-d")],
        group.start.strftime("%H:%M"),
        group.end.strftime("%H:%M"),
        role,
        registration.name,
      ]).html_safe -%>
    <% end %>
  <% end %>
<% end %>
