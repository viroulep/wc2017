<h4>French Championship 2018 groups schedule</h4>

<div class="row">
  <div id="calendar" class="col-xs-12"></div>
</div>
<script>
var mobile = /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent);
var defaultViewNav = mobile ? "agenda" : "agendaFourDay";
var viewAvail = mobile ? "agendaFourDay,agenda" : "listFourDay,agendaFourDay,agenda";

$('#calendar').fullCalendar({
  // see: https://fullcalendar.io/docs/views/Custom_Views/
  views: {
    agendaFourDay: {
      type: 'agenda',
      duration: { days: 2 },
      buttonText: 'Calendar',
    },
    listFourDay: {
      type: 'list',
      duration: { days: 2 },
      buttonText: 'Printable',
    },
    agenda: {
      buttonText: '1-day calendar',
    },
  },
  defaultView: defaultViewNav,
  header: {
    left: '',
    center: viewAvail,
    right: 'prev,next',
  },
  eventOrder: "id",
  // yep, hardcoded
  defaultDate: '2017-10-07',
  minTime:'08:00:00',
  maxTime:'22:00:00',
  aspectRatio: '0.75',
  slotDuration: '00:15:00',
  timeFormat: 'H:mm',
  slotLabelFormat: 'H:mm',
  events: '<%= groups_schedule_path(format: :json) %>',
  eventClick: function(event, jsEvent, view) {
    $.getScript(event.show_url, function() {});
  },
});
</script>
