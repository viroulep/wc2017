<% group_id ||= "nogroup" %>
<% title ||= "untitled" %>
<% collection ||= [] %>
<div class="col-xs-6 col-sm-3 col-md-2">
  <div class="panel panel-info">
    <div class="panel-heading heading-as-link collapsed" data-toggle="collapse" data-target="#collapse-<%= group_id %>">
      <h3 class="panel-title">
        <%= title %>
        <span class="badge"><%= collection.size %></span>
        <span class="collapse-indicator"></span>
      </h3>
    </div>
    <div id="collapse-<%= group_id %>" class="panel-collapse collapse">
      <table class="table table-hover panel-body">
        <% collection.each do |r| %>
          <tr>
            <td><%= r.try(:registration)&.id %></td>
            <td><%= r.user.name %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
